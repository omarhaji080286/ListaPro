<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>


    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>
    
    <style name="Button" >
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_content_size_average</item>
        <item name="android:padding">@dimen/text_content_padding</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">@dimen/margin_average</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="EditText">
        <item name="android:textSize">@dimen/text_size_h2</item>
        <item name="android:padding">@dimen/text_content_padding</item>
        <item name="android:layout_marginStart">@dimen/margin_average</item>
        <item name="android:layout_marginEnd">@dimen/margin_average</item>
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="android:layout_marginBottom">@dimen/margin_small</item>
    </style>

    <style name="LogoImg">
        <item name="android:layout_height">@dimen/logo_size_height</item>
        <item name="android:layout_width">@dimen/logo_size_width</item>
    </style>

    <style name="Title">
        <item name="android:textSize">@dimen/text_size_h3</item>
        <item name="android:padding">@dimen/text_content_padding</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="SimpleText">
        <item name="android:textSize">@dimen/text_content_size_average</item>
        <item name="android:layout_gravity">center_vertical|right</item>
        <item name="android:padding">@dimen/text_content_padding</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="WelcomeItem">
        <item name="android:background">@drawable/linear_border</item>
        <item name="android:layout_margin">@dimen/text_content_margin_large</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="WelcomeTextItem">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="WelcomeImgItem">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_width">@dimen/welcome_img_item_width</item>
        <item name="android:layout_height">@dimen/welcome_img_item_height</item>
        <item name="android:layout_marginBottom">@dimen/margin_small</item>
    </style>

    <style name="flagCountry">
        <item name="android:layout_width">@dimen/flag_country_size_width</item>
        <item name="android:layout_height">@dimen/flag_country_size_height</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="SpinnerImg">
        <item name="android:layout_height">@dimen/shoptype_spinner_height</item>
        <item name="android:layout_width">@dimen/shoptype_spinner_width</item>
        <item name="android:layout_marginStart">@dimen/margin_small</item>
        <item name="android:layout_marginEnd">@dimen/margin_small</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="SpinnerText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_small</item>
        <item name="android:layout_marginEnd">@dimen/margin_small</item>
        <item name="android:textSize">@dimen/text_content_size_large</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="TextInSelectList">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginEnd">@dimen/margin_average</item>
    </style>

    <style name="TextInOrder">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_content_size_average</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginStart">@dimen/margin_small</item>
        <item name="android:layout_marginEnd">@dimen/margin_small</item>
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="android:layout_marginBottom">@dimen/margin_small</item>
    </style>

    <style name="OrderedItemText">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_content_size_average</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginTop">@dimen/margin_very_small</item>
        <item name="android:layout_marginBottom">@dimen/margin_very_small</item>
    </style>

    <style name="CheckStyle">
        <item name="android:layout_width">@dimen/size_width_check</item>
        <item name="android:layout_height">@dimen/size_height_check</item>
        <item name="android:layout_margin">@dimen/check_margin</item>

    </style>

    <style name="TextValuesInShopOverview">
        <item name="android:textSize">@dimen/text_content_size_large</item>
        <item name="android:padding">@dimen/text_content_padding</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginTop">@dimen/text_content_margin_large</item>
    </style>


</resources>
